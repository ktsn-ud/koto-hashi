{
  // Visit https://aka.ms/tsconfig to read more about this file
  "compilerOptions": {
    // Paths
    "rootDir": "./src",
    "outDir": "./dist",

    // Node ESM
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    // Target
    "target": "ES2022",

    // Types (IMPORTANT)
    "types": ["node"],

    // Interop (Express import を素直に書くため)
    "esModuleInterop": true,

    // Output
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended for tooling
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
